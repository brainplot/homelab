{# vim: set filetype=yaml ts=2 sw=0 expandtab: #}
hubble:
  enabled: false

ipam:
  # -- Configure IP Address Management mode.
  # ref: https://docs.cilium.io/en/stable/network/concepts/ipam/
  mode: kubernetes

operator:
  replicas: {{ cilium_operator_replicas | default(replicas) }}

policyCIDRMatchMode: nodes

# https://docs.cilium.io/en/stable/network/concepts/routing/#native-routing
routingMode: native
autoDirectNodeRoutes: true
ipv4NativeRoutingCIDR: {{ kubernetes_pod_subnet }}

# https://docs.cilium.io/en/stable/network/kubernetes/kubeproxy-free/#kubernetes-without-kube-proxy
kubeProxyReplacement: true
k8sServiceHost: {{ kubernetes_control_plane_endpoint }}
k8sServicePort: 6443
